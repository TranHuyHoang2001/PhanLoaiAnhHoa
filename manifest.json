{
  "manifest_version": 3,
  "name": "PhanLoaiAnhHoaByHoang",
  "version": "0.0.0.1",
  "description": "Phân loại được 5 loại hoa: hoa hồng, hoa tulip, hoa cúc trắng, hoa sen, hoa hướng dương",
  "icons": {
    "16": "./icon16.png",
    "48": "./icon48.png",
    "128": "./icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "./icon16.png",
      "32": "./icon32.png",
      "48": "./icon48.png",
      "128": "./icon128.png"
    },
    "default_popup": "popup.html",
    "default_title": "Phân loại hoa by Hoàng"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["tabs", "activeTab", "https://w/w"]
}
